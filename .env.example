# Factorio RCON Configuration
FACTORIO_RCON_HOST=localhost
FACTORIO_RCON_PORT=27015
FACTORIO_RCON_PASSWORD=your_password_here

# Player to control (name or index)
# Use index "1" for the first player, or a player name like "Agent"
FACTORIO_PLAYER=1

# Streaming options
# Show AI commands in game chat (visible on stream)
FACTORIO_SHOW_COMMANDS=true
# Max length of displayed commands (0 = no limit)
FACTORIO_MAX_DISPLAY_LENGTH=200
