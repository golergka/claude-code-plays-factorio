{
  "name": "factorio-agent",
  "version": "1.0.0",
  "description": "AI agent that plays Factorio via RCON using Claude Code",
  "type": "module",
  "scripts": {
    "eval": "tsx scripts/factorio-eval.ts",
    "eval:file": "tsx scripts/factorio-eval-file.ts",
    "say": "tsx scripts/factorio-say.ts",
    "hint": "tsx scripts/factorio-hint.ts",
    "analyze": "tsx scripts/analyze-screenshot.ts",
    "agent:start": "./scripts/run-agent.sh",
    "agent:kill": "./scripts/kill-all-agents.sh",
    "agent:status": "./scripts/check-agent-alive.sh",
    "factory:status": "./scripts/factory-status.sh",
    "screenshot": "./scripts/take-screenshot.sh",
    "chat:bridge": "./scripts/chat-bridge.sh",
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "factorio",
    "ai",
    "rcon",
    "claude"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^6.15.0",
    "rcon-ts": "^1.2.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
